/* Simple but very useful code */

SELECT
	ST.NAME AS TableName,
	SC.NAME AS ColumnName,
	CONCAT('SELECT * FROM ',ST.NAME) AS Selectt,
	SUM(PT.ROWS) AS Amount
FROM SYS.COLUMNS SC
INNER JOIN SYS.TABLES ST ON ST.OBJECT_ID = SC.OBJECT_ID
INNER JOIN SYS.PARTITIONS PT ON PT.OBJECT_ID = ST.OBJECT_ID
WHERE SC.NAME LIKE '%Find%'     /* <-- Use '%Find%' to find your TableName or Column in a database */
GROUP BY
	ST.NAME,
	SC.NAME
HAVING SUM(PT.ROWS) > 0
ORDER BY SUM(PT.ROWS) DESC;
